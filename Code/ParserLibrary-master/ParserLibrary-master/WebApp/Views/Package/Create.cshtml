@model WebApp.Models.Package
@{
    ViewBag.Title = "Добавление нового приложения";
}
<form asp-action="create" asp-controller="package">
    <div class="form-group">
        <label asp-for="Name" class="control-label">PackageName</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>